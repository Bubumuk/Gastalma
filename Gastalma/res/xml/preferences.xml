<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gastos.gastalma" >

    <PreferenceCategory android:title="@string/inline_preferences" >
        <ListPreference
            android:defaultValue="24"
            android:entries="@array/dias_de_pago"
            android:entryValues="@array/dias_de_pago"
            android:key="dia_pago"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/dia_de_pago"
            android:summary="24" />

        <com.gastos.utils.SeekBarPreference
            android:defaultValue="15"
            android:key="porciento_pago"
            android:max="40"
            android:summary="15"
            android:title="Porcentaje de Pago"
            app:min="0" />
        
    </PreferenceCategory>
    
    <PreferenceCategory android:title="Seguridad">
        <PreferenceScreen
            android:key="seguridad"
            android:title="Definir bloqueo de aplicación"
            android:summary="Ninguno" >
            
            <Preference
                android:key="lock_ninguno"
                android:title="Ninguno"
                android:summary="Desactivar seguridad de acceso a la aplicación" />
            
            <Preference
                android:key="lock_pattern"
                android:title="Patrón"
                android:summary="Dibujar patrón para acceder a la aplicación" />
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>